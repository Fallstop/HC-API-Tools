{
  "name": "node",
  "version": "0.0.1",
  "private": true,
  "license": "mit-license",
  "scripts": {
    "start": "node ./dist-server/bin/www",
    "dev": "NODE_ENV=development npm-run-all build start",
    "prod": "NODE_ENV=production npm-run-all build start",
    "deploy": "caprover deploy -u https://captain.host.qrl.nz -a hctools -b main",
    "transpile": "babel ./server --out-dir dist-server",
    "clean": "rimraf dist-server",
    "build": "npm-run-all clean transpile"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "~4.17.1",
    "googleapis": "^68.0.0",
    "morgan": "~1.10.0",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.13.14",
    "@babel/preset-env": "^7.13.12",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2"
  }
}
